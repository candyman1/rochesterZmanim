<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop= "8dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:gravity="center"

            android:paddingBottom="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today"

                android:textColor="@android:color/white"
                android:textSize="40sp"
                />
            <TextView
                android:id="@+id/today"
                android:textSize="40sp"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="24sp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/teal"
                        android:text="@string/dawn"
                        android:textSize="26sp"
                        />
                    <TextView
                        android:id="@+id/dawn"
                        android:textSize="26sp"
                        android:textColor="@color/teal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="16sp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lime"
                        android:text="Neitz-Sunrise: "
                        android:textSize="26sp"
                        />
                    <TextView
                        android:id="@+id/rise"
                        android:textSize="26sp"
                        android:textColor="@color/lime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="16sp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/purple"
                        android:text="@string/ma"
                        android:textSize="26sp"
                        />
                    <TextView
                        android:id="@+id/shema1"
                        android:textSize="26sp"
                        android:textColor="@color/purple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="16sp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/orange"
                        android:text="@string/gra"
                        android:textSize="26sp"
                        />
                    <TextView
                        android:id="@+id/shema"
                        android:textSize="26sp"
                        android:textColor="@color/orange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="16sp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/teal"
                        android:text="@string/tefila"
                        android:textSize="26sp"
                        />
                    <TextView
                        android:id="@+id/shmona"
                        android:textSize="26sp"
                        android:textColor="@color/teal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"

                    android:paddingBottom="16sp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lime"
                        android:text="@string/minchaGed"
                        android:textSize="26sp"
                        />
                    <TextView
                        android:id="@+id/minchaG"
                        android:textSize="26sp"
                        android:textColor="@color/lime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    android:paddingBottom="16sp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/purple"
                        android:text="@string/minchaKet"
                        android:textSize="26sp"
                        />
                    <TextView
                        android:id="@+id/minchaK"
                        android:textSize="26sp"
                        android:textColor="@color/purple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="16sp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/orange"
                        android:text="@string/plagMin"
                        android:textSize="26sp"
                        />
                    <TextView
                        android:id="@+id/plagM"
                        android:textSize="26sp"
                        android:textColor="@color/orange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="16sp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/teal"
                        android:text="Shkia-Sunset: "
                        android:textSize="26sp"
                        />
                    <TextView
                        android:id="@+id/set"
                        android:textSize="26sp"
                        android:textColor="@color/teal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="20sp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lime"
                        android:text="Tzais(R'T): "
                        android:textSize="26sp"
                        />
                    <TextView
                        android:id="@+id/late"
                        android:textSize="26sp"
                        android:textColor="@color/lime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>



                <Button
                    android:layout_width="250sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/next"
                    android:textSize="26sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/tomorrow"
                    android:background="@drawable/dimensions"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>